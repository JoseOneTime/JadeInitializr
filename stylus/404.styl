selection(color, shadow)
	::-moz-selection
		background color
		text-shadow shadow
	::selection
		background color
		text-shadow shadow

text-size-adjust()
	-webkit-text-size-adjust arguments
	-ms-text-size-adjust arguments

background-image-with-gradient()
	background-image: -webkit-linear-gradient(arguments)
	background-image: -moz-linear-gradient(arguments)
	background-image: -ms-linear-gradient(arguments)
	background-image: -o-linear-gradient(arguments)

appearance()
	-webkit-appearance arguments
	-moz-appearance arguments
	appearance arguments

selection(#b3d4fc, none)

html
	padding 30px 10px
	font-size 20px
	line-height 1.4
	color #737373
	background #f0f0f0
	text-size-adjust 100%

html
input
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif

body
	max-width 500px
	_width 500px
	padding 30px 20px 50px
	border 1px solid #b3b3b3
	border-radius 4px
	margin 0 auto
	box-shadow 0 1px 10px #a7a7a7, inset 0 1px 0 #fff
	background #fcfcfc

h1
	margin 0 10px
	font-size 50px
	text-align center

	span
		color #bbb

h3
	margin 1.5em 0 0.5em
p
	margin 1em 0
ul
	padding 0 0 0 40px
	margin 1em 0
.container
	max-width 380px
	_width 380px
	margin 0 auto

// google search
#goog-fixurl
	ul
		list-style none
		padding 0
		margin 0
	form
		margin 0

#goog-wm-qt
	width 220px
	height 20px
	padding 5px
	margin 5px 10px 0 0
	box-shadow inset 0 1px 1px #ccc

	&:hover
	&:focus
		border-color #105cb6
		outline 0
		color #222

#goog-wm-qt
#goog-wm-sb
	border 1px solid #bbb
	font-size 16px
	line-height normal
	vertical-align top
	color #444
	border-radius 2px

#goog-wm-sb
	display inline-block
	height 32px
	padding 0 10px
	margin 5px 0 0
	white-space nowrap
	cursor pointer
	background-color #f5f5f5
	background-image-with-gradient(rgba(255,255,255,0), #f1f1f1)
	appearance(none)
	*overflow visible
	*display inline
	*zoom 1

	&:hover
	&:focus
		border-color #aaa
		box-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
		background-color #f8f8f8

input::-moz-focus-inner
	padding 0
	border 0